# RUDRA Development Environment Configuration

# Application
APP_NAME=RUDRA
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=rudra
POSTGRES_PASSWORD=rudra_dev_password
POSTGRES_DB=rudra_dev

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_dev_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Security
SECRET_KEY=dev-secret-key-change-in-production-12345
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Simulation Settings
MAX_SIMULATION_NODES=10000
MAX_SIMULATION_TIMESTEPS=1000
MONTE_CARLO_DEFAULT_RUNS=100
SIMULATION_TIMEOUT_SECONDS=3600
